<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GooglePlayServices.Sample.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Image
                Aspect="AspectFit"
                HeightRequest="185"
                SemanticProperties.Description="dot net bot in a race car number eight"
                Source="dotnet_bot.png" />

            <Label
                SemanticProperties.HeadingLevel="Level1"
                Style="{StaticResource Headline}"
                Text="Hello, App Events!" />

            <Button
                Clicked="OnAppEventClicked"
                HorizontalOptions="Fill"
                SemanticProperties.Hint="Sends an App Event to your Facebook App"
                Text="Click me to log an App Event!"
                x:Name="AppEventButton" />

            <Button
                Clicked="AppEventButton2_OnClicked"
                HorizontalOptions="Fill"
                SemanticProperties.Hint="Sends an App Event to your Facebook App"
                Text="Click me to log an App Event!"
                x:Name="AppEventButton2" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
